# ==================== LLM 配置 ====================
# 通义千问 API Key
DASHSCOPE_API_KEY=your-dashscope-api-key-here

# 意图识别小模型（推荐 qwen-turbo，成本低）
INTENT_MODEL=qwen-turbo

# 回答生成大模型（推荐 qwen-plus，性能强）
ANSWER_MODEL=qwen-plus

# 向量嵌入模型
EMBEDDING_MODEL=text-embedding-v3

# ==================== PostgreSQL / pgvector ====================
# 用于存储向量索引（规则文档 RAG）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rent_agent
DB_USER=postgres
DB_PASSWORD=your-postgres-password

# ==================== MySQL ====================
# JoyRent 业务数据库（游戏库存、订单查询）
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=joy_rent
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password

